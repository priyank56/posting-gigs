<section id="add" class="container">
    <div class="form-wrap">
        <h1>{{#if id}}Update{{else}}Add{{/if}} Profile</h1>
        <p>Your contact email will be shared with registered users to apply to your gig</p>

        {{#each errors}}
        <div class="error">
            <p>{{this}}</p>
        </div>
        {{/each}}

        <form action="{{#if id}}/profile/update?uid={{id}}{{else}}/profile/register{{/if}}" method="POST">
            <div class="input-group">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="input-box" placeholder="Enter your name" maxlength="100"
                    value="{{name}}">
            </div>
            <div class="input-group">
                <label for="designation">Designation</label>
                <input type="text" name="designation" id="designation" class="input-box"
                    placeholder="eg. JavaScript Developer, HR, Graphics Designer" maxlength="100"
                    value="{{designation}}">
            </div>
            <div class="input-group">
                <label for="email">Contact Email</label>
                <input type="email" name="email" id="email" class="input-box" placeholder="Enter an email"
                    value="{{email}}">
            </div>
            {{#if id}}{{else}}
            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="input-box"
                    placeholder="Enter Your Password (Use Combinations)" maxlength="100">
            </div>
            {{/if}}
            <input type="submit" value="{{#if id}}Update{{else}}Add{{/if}} Profile" class="btn btn-reverse">
            {{#if id}}{{else}}<a href="/profile/login">Alredy have an account?</a>{{/if}}
        </form>
    </div>
</section>